package scala.math

object MyClass {

  def main(args: Array[String]) : Unit = {
    var a = 6
    var b = 8
    var c = 10

    a = a*a
    b = b*b
    c = c*c


    // La siguiente linea de codigo sirve cuando c es un numero decimal:
    // c = rint(c)

    var res = a+b

    if (c == res){
      print("Si cumple con el teorema de pitagoras")
    }else{
      print("No cumple con el teorema de pitagoras")
    }
  }
}
